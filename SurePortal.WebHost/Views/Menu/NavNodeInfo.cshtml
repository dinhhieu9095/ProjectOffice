@model SurePortal.WebHost.Models.Navigation.NavNodeInfoModel
<div class="form-group">
    <label>
        @Html.DisplayNameFor(x => x.Areas)
        <span class="symbol-valid">*</span>
    </label>
    @Html.TextBoxFor(x => x.Areas, new { @class = "form-control", @readonly = "readonly" })

</div>
<div class="form-group hidden">
    <label>
        @Html.DisplayNameFor(x => x.Controller)
        <span class="symbol-valid">*</span>
    </label>
    @Html.TextBoxFor(x => x.Controller, new { @class = "form-control", @readonly = "readonly" })
    @Html.ValidationMessageFor(x => x.Controller, string.Empty, new { @style = "color: #e7505a" })
</div>
<div class="form-group">
    <label>
        @Html.DisplayNameFor(x => x.Action)
        <span class="symbol-valid">*</span>
    </label>
    @Html.TextBoxFor(x => x.Action, new { @class = "form-control", @readonly = "readonly", placeholder = "Action ..." })
    @Html.ValidationMessageFor(x => x.Action, string.Empty, new { @style = "color: #e7505a" })
</div>