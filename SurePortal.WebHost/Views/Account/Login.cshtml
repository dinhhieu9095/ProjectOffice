@using DaiPhatDat.WebHost.Models
@model LoginViewModel
@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
    ViewBag.Title = "Đăng nhập";
}
<div class="login-form login-signin">
    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="pb-13 pt-lg-0 pt-5">
            <h3 class="font-weight-bolder text-dark font-size-h4 font-size-h1-lg">Chào mừng bạn đến với hệ thống</h3>
        </div>
        <div class="form-group">
            <label class="font-size-h6 font-weight-bolder text-dark">Tài khoản/Email</label>
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control form-control-solid h-auto py-7 px-6 rounded-lg" })
            @Html.ValidationMessageFor(m => m.Email, "Bạn cần nhập Tài khoản/Email", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <div class="d-flex justify-content-between mt-n5">
                <label class="font-size-h6 font-weight-bolder text-dark pt-5">Mật khẩu</label>
            </div>
            @Html.PasswordFor(m => m.Password, new { value = "123qwe!@#", @class = "form-control form-control-solid h-auto py-7 px-6 rounded-lg" })
            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
        </div>
        <div class="pb-lg-0 pb-5">
            <button type="submit" class="btn btn-primary font-weight-bolder font-size-h6 px-8 py-4 my-3 mr-3">
                Đăng nhập
            </button>

        </div>
    }
</div>
